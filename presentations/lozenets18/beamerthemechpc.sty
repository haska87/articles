\ProvidesPackage{beamerthemecphc}

% Цвета
\definecolor{ColorDark}{RGB}{12,62,94}
\definecolor{ColorLight}{RGB}{193,207,215}
\definecolor{ColorItem}{RGB}{255,108,0}

% Задание цветов
\setbeamercolor{item}{fg=ColorItem}
\setbeamercolor{title}{fg=black}
\setbeamercolor{footline}{bg=ColorDark,fg=white}
\setbeamercolor{headline}{bg=ColorDark,fg=white}
\setbeamercolor{frametitle}{fg=black,bg=ColorLight}

% Расположение текста
\setbeamersize{text margin left=20pt,text margin right=20pt}

% Пустая навигация
\setbeamertemplate{navigation symbols}{}

% Списки
\setbeamertemplate{itemize items}[square]
\setbeamertemplate{enumerate items}[square]

% Заголовок слайда
\setbeamertemplate{frametitle}{
	\nointerlineskip
	\begin{beamercolorbox}[wd=\paperwidth,center,sep=10pt]{frametitle}
		\insertsubsection
		\insertframetitle
	\end{beamercolorbox}
}


% Колонтитулы слайда
\setbeamertemplate{headline}{
	\begin{beamercolorbox}[wd=\paperwidth,ht=10pt,sep=2pt,leftskip=2pt,rightskip=2pt]{headline}
		%\insertdate 
		\hfill 
		\insertsection
	\end{beamercolorbox}
}
\setbeamertemplate{footline}{
	\begin{beamercolorbox}[wd=\paperwidth,ht=10pt,sep=2pt,leftskip=2pt,rightskip=2pt]{footline}
		%\raisebox{-1pt}{\includegraphics[width=0.03\paperwidth]{logo.png}} \insertinstitute
		\hfill \textbf{\copyright} 
		\insertauthor		
	\end{beamercolorbox}
}

% Титульная страница
\addtobeamertemplate{title page}{}{
%	\centerline{\includegraphics[width=0.15\paperwidth]{logo.png}}
}{}

% Автодобавление заголовка слайда
\makeatletter
